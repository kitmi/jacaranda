{
  "name": "jacaranda",
  "version": "1.0.0",
  "description": "A monorepo for JavaScript application framework & libraries",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "clean": "pnpm -r clean",
    "doc": "pnpm -r doc",
    "prettier": "pnpm -r prettier",
    "lint": "pnpm -r lint",
    "lint-fix": "pnpm -r lint-fix",
    "bump": "changeset version",
    "release-all": "changeset publish && pnpm -r publish",
    "test": "pnpm -r test"
  },
  "keywords": [],
  "author": "Rockie Guo <rockie@kitmi.com.au>",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "bin": {
    "prepack": "./scripts/prepack.js"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@swc-node/register": "^1.9.0",
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.5.7",
    "pino-pretty": "^10.0.0",
    "shx": "0.3.4",
    "jsdoc": "^4.0.2",
    "minami": "^1.2.3",
    "taffydb": "^2.7.3",
    "chai": "^4.3.7",
    "mocha": "^10.0.0",
    "mocha-multi": "^1.1.7",
    "nyc": "^15.1.0"
  },
  "prettier": {
    "quoteProps": "consistent",
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 4,
    "useTabs": false
  }
}