{
    "name": "@kitmi/sys",
    "version": "1.0.0",
    "description": "JavaScript local system utilities",
    "main": "cjs/index.js",
    "module": "src/index.js",
    "react-native": "src/index.js",
    "exports": {
        ".": {
            "import": "./src/index.js",
            "require": "./cjs/index.js"
        },
        "./*": {
            "import": "./src/*.js",
            "require": "./cjs/*.js"
        }
    },
    "publishConfig": {
        "access": "public"
    },
    "author": "Rockie Guo <rockie@kitmi.com.au>",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kitmi/jacaranda.git"
    },
    "license": "MIT",
    "scripts": {
        "test": "mocha --recursive test/**/*.spec.js",
        "doc": "jsdoc --configure .jsdoc.json --verbose && bun x prepack",
        "cover": "nyc --reporter=html --reporter=text mocha --recursive test/**/*.spec.js && open ./coverage/index.html",
        "prettier": "prettier --write .",
        "lint": "eslint \"**/*.js\"",
        "lint-fix": "eslint \"**/*.js\" --fix",
        "clean": "shx rm -rf cjs coverage .nyc_output",
        "build": "bun run clean && swc src/**/*.js -d ./cjs"
    },
    "keywords": [
        "kit",
        "kitmi",
        "jacaranda",
        "system",
        "filesystem",
        "cmd"
    ],
    "nyc": {
        "exclude": [
            ".*",
            "cjs",
            "test",
            "**/*.spec.js"
        ]
    },
    "dependencies": {
        "fs-extra": "^11.2.0"
    },
    "prettier": {
        "quoteProps": "consistent",
        "printWidth": 120,
        "singleQuote": true,
        "trailingComma": "es5",
        "tabWidth": 4,
        "useTabs": false
    },
    "devDependencies": {
        "@kitmi/utils": "workspace:*"
    }
}
