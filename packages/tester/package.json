{
    "name": "@kitmi/tester",
    "version": "1.0.0",
    "description": "JavaScript application unit test framework",
    "main": "cjs/index.js",
    "module": "src/index.js",
    "react-native": "src/index.js",
    "exports": {
        ".": {
            "import": "./src/index.js",
            "require": "./cjs/index.js"
        },
        "./*": {
            "import": "./src/*.js",
            "require": "./cjs/*.js"
        },
        "./**/*": {
            "import": "./src/**/*.js",
            "require": "./cjs/**/*.js"
        }
    },
    "publishConfig": {
        "access": "public"
    },
    "author": "Rockie Guo <rockie@kitmi.com.au>",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kitmi/jacaranda.git"
    },
    "license": "MIT",
    "scripts": {
        "prettier": "prettier --write .",
        "lint": "eslint \"**/*.js\"",
        "lint-fix": "eslint \"**/*.js\" --fix",
        "clean": "shx rm -rf cjs coverage .nyc_output",
        "build": "bun run clean && swc src/**/*.js -d ./cjs",        
        "doc": "jsdoc --configure .jsdoc.json --verbose && bun x prepack",
        "test": "mocha --recursive test/**/*.spec.js",
        "cover": "nyc --reporter=html --reporter=text mocha --recursive test/**/*.spec.js && open ./coverage/index.html",
        "report": "allure generate allure-results --clean -o allure-report && serve ./allure-report"
    },
    "keywords": [
        "kitmi",
        "jacaranda",
        "test",
        "coverage",
        "framework"
    ],
    "nyc": {
        "exclude": [
            ".*",
            "cjs",
            "test",
            "**/*.spec.js"
        ]
    },
    "dependencies": {
        "@kitmi/adapters": "workspace:*",
        "@kitmi/jacaranda": "workspace:*",
        "@kitmi/jsonv": "workspace:*",
        "@kitmi/sys": "workspace:*",
        "@kitmi/types": "workspace:*",
        "@kitmi/utils": "workspace:*",
        "allure-commandline": "^2.22.0",
        "allure-js-commons": "^2.3.0",
        "allure-mocha": "^2.3.0",
        "benchmark": "^2.1.4",
        "lodash": "^4.17.21",
        "microtime": "^3.1.1",
        "mocha": "^10.0.0",
        "mocha-multi": "^1.1.7"
    },
    "devDependencies": {
        "@koa/router": "^12.0.0",
        "koa": "^2.14.2",
        "koa-body": "^6.0.1",
        "koa-compress": "^5.1.1",
        "koa-etag": "^4.0.0",
        "koa-mount": "^4.0.0",
        "koa-static": "^5.0.0",
        "pino": "^8.14.1",
        "pino-pretty": "^10.0.0",
        "pino-http": "^8.3.3",
        "request-ip": "^3.3.0"
    },
    "prettier": {
        "quoteProps": "consistent",
        "printWidth": 120,
        "singleQuote": true,
        "trailingComma": "es5",
        "tabWidth": 4,
        "useTabs": false
    }
}