{
    "name": "@kit/types",
    "version": "1.0.0",
    "description": "JavaScript semantic data types",
    "main": "cjs/index.js",
    "module": "lib/index.js",
    "react-native": "lib/index.js",
    "exports": {
        ".": {
            "import": "./lib/index.js",
            "require": "./cjs/index.js"
        },
        "./*": {
            "import": "./lib/*.js",
            "require": "./cjs/*.js"
        }
    },
    "publishConfig": {
        "access": "public"
    },
    "author": "Rockie Guo <rockie@kitmi.com.au>",
    "repository": "https://github.com/kitmi/jacaranda",
    "license": "MIT",
    "scripts": {
        "test": "mocha --recursive ./__test__/*.spec.js",
        "doc": "jsdoc --configure .jsdoc.json --verbose",
        "cover": "nyc --reporter=html --reporter=text mocha --recursive ./__test__/*.spec.js && open ./coverage/index.html",
        "prettier": "prettier --write .",
        "lint": "eslint \"./src/**/*.js\"",
        "lint-fix": "eslint \"./src/**/*.js\" --fix",
        "clean": "shx rm -rf cjs coverage .nyc_output",
        "build": "bun run clean && swc ./src/*.js -d ./cjs"
    },
    "devDependencies": {
        "luxon": "^3.4.4"
    },
    "dependencies": {
        "@kit/utils": "workspace:*",
        "lodash": "^4.17.21"
    },
    "nyc": {
        "exclude": [
            ".*",
            "cjs",
            "test"
        ]
    },
    "keywords": [
        "kit",
        "kitmi",
        "jacaranda",
        "types",
        "errors"
    ],
    "prettier": {
        "quoteProps": "consistent",
        "printWidth": 120,
        "singleQuote": true,
        "trailingComma": "es5",
        "tabWidth": 4,
        "useTabs": false
    }
}