{
    "name": "@kitmi/types",
    "version": "1.3.3",
    "description": "JavaScript semantic data types",
    "main": "cjs/index.js",
    "module": "src/index.js",
    "react-native": "src/index.js",
    "exports": {
        ".": {
            "import": "./src/index.js",
            "require": "./cjs/index.js"
        },
        "./*": {
            "import": "./src/*.js",
            "require": "./cjs/*.js"
        }
    },
    "publishConfig": {
        "access": "public"
    },
    "author": "Rockie Guo <rockie@kitmi.com.au>",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kitmi/jacaranda.git"
    },
    "license": "MIT",
    "scripts": {
        "test": "mocha --recursive ./test/*.spec.js",
        "doc": "jsdoc --configure .jsdoc.json --verbose && pnpm prepack",
        "cover": "nyc --reporter=html --reporter=text mocha --recursive ./test/*.spec.js && open ./coverage/index.html",
        "prettier": "prettier --write .",
        "lint": "oxlint -c .oxlintrc.json --disable-react-plugin --disable-typescript-plugin  ./src",
        "lint-fix": "pnpm lint --fix",
        "clean": "shx rm -rf cjs coverage .nyc_output",
        "build": "pnpm clean && swc ./src -d ./cjs  --strip-leading-paths",
        "prepublishOnly": "pnpm build"
    },
    "devDependencies": {
        "luxon": "^3.4.4",
        "oxlint": "^0.4.4"
    },
    "dependencies": {
        "@kitmi/utils": "workspace:^",
        "lodash": "^4.17.21"
    },
    "nyc": {
        "exclude": [
            ".*",
            "cjs",
            "test"
        ]
    },
    "keywords": [
        "kit",
        "kitmi",
        "jacaranda",
        "types",
        "errors"
    ],
    "prettier": {
        "quoteProps": "consistent",
        "printWidth": 120,
        "singleQuote": true,
        "trailingComma": "es5",
        "tabWidth": 4,
        "useTabs": false
    }
}